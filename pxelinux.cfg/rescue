MENU TITLE Rescue Menu

LABEL Main Menu
  KERNEL vesamenu.c32
  APPEND pxelinux.cfg/default

LABEL Centos 6 Rescue
  KERNEL centos6/i386/vmlinuz
  APPEND initrd=centos6/i386/initrd.img text ramdisk_size=9216 jfs xfs rescue

LABEL Centos 6 Rescue - 64
  KERNEL centos6/x86_64/vmlinuz
  APPEND initrd=centos6/x86_64/initrd.img text ramdisk_size=9216 jfs xfs rescue

